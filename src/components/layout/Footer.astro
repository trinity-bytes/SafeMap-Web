    </div>

    <!-- Newsletter Signup -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <div class="lg:flex lg:items-center lg:justify-between">
        <div class="lg:flex-1">
          <h3 class="text-lg font-semibold mb-2">Mantente actualizado</h3>
          <p class="text-gray-400 mb-4 lg:mb-0">
            Recibe las últimas noticias sobre seguridad ciudadana y nuevas funciones de SafeMap.
          </p>
        </div>
        <div class="lg:ml-8 lg:flex-shrink-0">
          <form class="flex flex-col sm:flex-row gap-3">
            <input 
              type="email" 
              placeholder="tu@email.com" 
              class="px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            >
            <button 
              type="submit"
              class="px-6 py-2 bg-gradient-to-r from-primary-600 to-purple-600 text-white rounded-lg font-semibold hover:shadow-lg transition-all duration-300 transform hover:scale-105"
            >
              Suscribirse
            </button>
          </form>
        </div>
      </div>
    </div>
