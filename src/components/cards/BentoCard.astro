---
export interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle, class: className = '' } = Astro.props;
---

<div class={`rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl hover:scale-[1.02] ${className}`}>
  <div class="p-3 lg:p-4 h-full flex flex-col">
    <!-- Card Header -->
    <div class="mb-2 lg:mb-3">
      <h3 class="text-base lg:text-lg font-bold mb-1">{title}</h3>
      {subtitle && (
        <p class="text-xs lg:text-sm opacity-80">{subtitle}</p>
      )}
    </div>
    
    <!-- Card Content -->
    <slot />
  </div>
</div>
