---
export interface Props {
  quote: string;
  author: string;
  position: string;
  organization: string;
  avatar?: string;
  verified?: boolean;
}

const { quote, author, position, organization, avatar = '', verified = false } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 p-8 relative">
  <!-- Quote Icon -->
  <div class="absolute top-4 right-4 text-primary-200">
    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
    </svg>
  </div>

  <!-- Verified Badge -->
  {verified && (
    <div class="absolute top-4 left-4">
      <div class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full flex items-center space-x-1">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>Verificado</span>
      </div>
    </div>
  )}

  <!-- Quote -->
  <blockquote class="text-gray-700 mb-6 leading-relaxed italic text-lg mt-8">
    "{quote}"
  </blockquote>

  <!-- Author Info -->
  <div class="flex items-center space-x-4">
    <!-- Avatar -->
    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary-400 to-purple-500 flex items-center justify-center text-white font-bold text-lg flex-shrink-0">
      {avatar ? (
        <img src={avatar} alt={author} class="w-full h-full rounded-full object-cover" />
      ) : (
        author.split(' ').map(name => name[0]).join('').slice(0, 2)
      )}
    </div>

    <!-- Author Details -->
    <div class="flex-1 min-w-0">
      <h4 class="font-semibold text-gray-900 truncate">{author}</h4>
      <p class="text-sm text-gray-600 truncate">{position}</p>
      <p class="text-xs text-primary-600 font-medium truncate">{organization}</p>
    </div>
  </div>

  <!-- Hover Border Effect -->
  <div class="absolute inset-0 border-2 border-transparent hover:border-primary-200 rounded-2xl transition-colors duration-300 pointer-events-none"></div>
</div>
